@model IEnumerable<PersonalFinanceManager.Models.Transaction>

@{
    ViewData["Title"] = "All Transactions";
}

<h2 class="mb-4">All Transactions</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">+ New Transaction</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Amount.ToString("F2")</td>
                <td>@item.Type</td>
                <td>

                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
