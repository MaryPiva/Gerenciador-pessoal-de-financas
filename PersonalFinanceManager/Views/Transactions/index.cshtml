@model IEnumerable<PersonalFinanceManager.Models.Transaction>

<h2>All Transactions</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">+ New Transaction</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            <td>R$ @item.Amount.ToString("F2")</td>
            <td>@item.Type</td>
        </tr>
    }
    </tbody>
</table>
